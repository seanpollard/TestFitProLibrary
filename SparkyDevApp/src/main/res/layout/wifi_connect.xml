<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IP Address"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/ipAddressEditText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Port"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/portEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone|number"
        android:ems="10"
        android:id="@+id/ipAddressEditText"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:hint="168.192.0.1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/portEditText"
        android:layout_below="@+id/ipAddressEditText"
        android:layout_alignStart="@+id/ipAddressEditText"
        android:layout_alignEnd="@+id/ipAddressEditText"
        android:hint="80"
        android:inputType="phone|number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/buttonWifiConnect"
        android:layout_below="@+id/portEditText"
        android:layout_alignStart="@+id/portEditText" />
</RelativeLayout>