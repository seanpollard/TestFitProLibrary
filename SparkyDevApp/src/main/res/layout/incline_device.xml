<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Incline Device"
    android:id="@+id/textViewInclineDevice"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Incline Device"
        android:id="@+id/textViewInclineDetails"
        android:layout_below="@+id/textViewInclineDevice"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editInclineText"
        android:hint="incline"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:numeric="decimal"
        android:singleLine="true"
        android:layout_below="@+id/textViewInclineDetails"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="InclineVales "
        android:id="@+id/textViewInclineValues"
        android:layout_below="@+id/editInclineText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="System Info"
        android:id="@+id/textViewSystemInfo"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibrate"
        android:id="@+id/calibrateButton"
        android:layout_below="@+id/textViewInclineValues"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calibration Sts:"
        android:layout_alignBaseline="@+id/calibrateButton"
        android:layout_alignBottom="@+id/calibrateButton"
        android:layout_toRightOf="@+id/calibrateButton"
        android:id="@+id/calStsTextView" />

</RelativeLayout>