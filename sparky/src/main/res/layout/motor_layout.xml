<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seekBarIncline"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="500dp"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_toLeftOf="@+id/emailButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkValsButton"
        android:layout_alignLeft="@+id/emailButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testView" 
            />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passFailView"
        android:textSize="40dp"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:id="@+id/allTests"
        android:layout_alignStart="@+id/checkValsButton"
        android:layout_alignEnd="@+id/checkValsButton"
        android:layout_below="@+id/checkValsButton"
        android:layout_alignLeft="@+id/passFailView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Console Name:"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editModelNumber" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editConsoleName"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editModelNumber"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:layout_below="@+id/textView2"
        android:layout_alignTop="@+id/editConsoleName"
        android:layout_toRightOf="@+id/editConsoleName"
        android:layout_marginLeft="17dp"
        android:textSize="12dp" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/editPartNumber"
        android:singleLine="true"
        android:layout_below="@+id/textView3"
        android:layout_alignTop="@+id/editModelNumber"
        android:layout_toRightOf="@+id/editModelNumber"
        android:layout_marginLeft="17dp"
        android:textSize="12dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:id="@+id/editSoftwareVersion"
        android:layout_below="@+id/textView4"
        android:layout_alignTop="@+id/editPartNumber"
        android:layout_toRightOf="@+id/editPartNumber"
        android:layout_marginLeft="17dp"
        android:textSize="12dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:id="@+id/editHardwareVersion"
        android:layout_below="@+id/textView5"
        android:layout_alignTop="@+id/editSoftwareVersion"
        android:layout_toRightOf="@+id/editSoftwareVersion"
        android:layout_marginLeft="17dp"
        android:textSize="12dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:id="@+id/editSerialNumber"
        android:layout_below="@+id/textView6"
        android:layout_alignTop="@+id/editHardwareVersion"
        android:layout_toRightOf="@+id/editHardwareVersion"
        android:layout_marginLeft="17dp"
        android:textSize="12dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:id="@+id/editManNumber"
        android:layout_above="@+id/checkValsButton"
        android:layout_toRightOf="@+id/editSerialNumber"
        android:layout_marginLeft="17dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model Number:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editModelNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Part Number:"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editPartNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Version:"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editSoftwareVersion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hardware Version:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editSerialNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serial Number:"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editSerialNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Man. Number:"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editManNumber" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Values"
        android:id="@+id/checkValsButton"
        android:layout_below="@+id/editSerialNumber"
        android:layout_alignStart="@+id/passFailView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Incline:"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/checkValsButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min. Incline:"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/editModelNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Speed:"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/editPartNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/editMaxIncline"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView8"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/editMinIncline"
        android:layout_above="@+id/scrollView"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/editMaxSpeed"
        android:layout_above="@+id/scrollView"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highlight Fails"
        android:id="@+id/findFailButton"
        android:layout_below="@+id/allTests"
        android:layout_alignEnd="@+id/allTests"
        android:layout_alignStart="@+id/allTests" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Results"
        android:id="@+id/emailButton"
        android:layout_alignEnd="@+id/clearButton"
        android:layout_alignStart="@+id/clearButton"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignBottom="@+id/findFailButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email Address:"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/clearButton"
        android:layout_toLeftOf="@+id/editEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmail"
        android:textSize="12dp"
        android:layout_above="@+id/scrollView"
        android:layout_toRightOf="@+id/textView5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Email"
        android:id="@+id/clearButton"
        android:layout_above="@+id/scrollView"
        android:layout_alignEnd="@+id/editManNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Speed:"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/editSoftwareVersion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/editMinSpeed"
        android:layout_above="@+id/scrollView"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMotor"
        android:layout_toEndOf="@+id/textView7"
        android:layout_below="@+id/findFailButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>